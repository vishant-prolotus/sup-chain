<body class="hold-transition sidebar-mini">


        <!-- Site wrapper -->
        <div class="wrapper">
            <% include partials/bank_header %>
            <!-- =============================================== -->
            <!-- Left side column. contains the sidebar -->
            <% include partials/bank_left %>
            <!-- =============================================== -->
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="header-icon">
                        <i class="pe-7s-world"></i>
                    </div>
                    <div class="header-title">
                        <h1>SofoSupply - Lender Dashboard</h1>
                        <small>You can manage Invoices.</small>
                        <ol class="breadcrumb">
                            <li><a href="/bank"><i class="pe-7s-home"></i> Home</a></li>
                            <li class="active">Dashboard</li>
                        </ol>
                    </div>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <!-- Single Bar Chart -->
                        <div class="col-sm-6 col-md-4">
                            <div class="panel panel-bd lobidisable">
                                <div class="panel-heading">
                                    <div class="panel-title">
                                        <h4>Block Height</h4>
                                    </div>
                                </div>
                                <div class="panel-body">
                                    <canvas id="singelBarChart" height="310"></canvas>
                                </div>
                            </div>
                        </div>


     <div class="col-sm-8">
         <div class="row">
                            <div class="panel">
                                <div class="panel-heading ui-sortable-handle">
                                    <div class="panel-title" style="max-width: calc(100% - 90px);">
                                        <h4>Block Hash</h4>
                                    </div>
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <tbody>
                                                <tr>
                                                    <th scope="row">Previous</th>
                                                    <td><%=blockData.previousBlockHash%></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Current</th>
                                                    <td><%=blockData.currentBlockHash%></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

         </div>


                    </div>



                        







                    </div>
                <div class="row">
                        <div class="col-sm-12">
                            <div class="panel">
                                <div class="panel-heading ui-sortable-handle">
                                    <div class="panel-title" style="max-width: calc(100% - 90px);">
                                        <h4>Blockchain Transactions Log</h4>
                                    </div>
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <tbody>
                                                <tr>
                                                    <th scope="row">Transaction ID</th>
                                                    <th scope="row">Timestamp</th>
                                                    <th scope="row">Transaction</th>
                                                    <th scope="row">Object</th>
                                                    <th scope="row">&nbsp;</th>
                                                </tr>
                                                
                                                <% for(i = (chaindata.length - 1); i >= 0; i--) { %>
                                                
                                                    <tr>
                                                        
                                                        <td>
                                                            <%=chaindata[i].transactionId%>
                                                            
                                                        </td>
                                                        <td><%=chaindata[i].datetime%></td>
                                                        <td><%=chaindata[i].transaction%></td>
                                                        <td><%=chaindata[i].id%></td>
                                                        <% if (chaindata[i].transactionId!="Deployment"){%>
                                                        <td>
                                                            
                                                            <button type="button" id="<%=chaindata[i].transactionId%>" class="btn btn-primary btn-xs btnViewTansaction">
                                                                                view
                                                            </button>
                                                            </td>
                                                        <%}else {%>
                                                            <td>&nbsp;</td>
                                                        <%}%>
                                                    
                                                    </tr>
                                                    
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>



                    </div> <!-- /.row -->
                </section> <!-- /.content -->
            </div> <!-- /.content-wrapper -->
            <footer class="main-footer">
                <div class="pull-right hidden-xs"> <b>Version</b> 1.0</div>
