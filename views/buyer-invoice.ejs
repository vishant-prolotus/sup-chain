        <script>
            $(document).ready(function () {

                 $(".updatebtn").click(function() {
                    var invData = $(this).attr("id").split("###");
                    $("#invID").val(invData[0]);
                    $("#supplierId").val(invData[1]);
                    $('#myModal').modal('show');
                });


                $(".notifications-menu").click(function() {
                    $.get( "/removeNotifications", function( data ) {
                        $("#notiCount").remove();
                    });
                });


                $(".btnSubmit").click(function() {
                    if($("#chkGoods").is(":checked")) {
                        if($("#chkQuality").is(":checked")) {
                            $("#frmInvoice").submit();
                        }
                        else {
                            alert("Please check Quality Check");
                        }
                    }
                    else {
                        alert("Please check Goods Recieved");
                    }
                });

            });
        </script>


