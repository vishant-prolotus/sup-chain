            <!-- =============================================== -->
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="header-icon">
                        <i class="hvr-buzz-out fa fa-money"></i>
                    </div>
                    <div class="header-title">
                        <h1>SofoSupply - Supplier Invoices</h1>
                        <small>You can add, edit and delete Invoices.</small>
                        <ol class="breadcrumb">
                            <li><a href="/supplier"><i class="pe-7s-home"></i> Home</a></li>
                            <li class="active">Manage Invoices</li>
                        </ol>
                    </div>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">



                        <div class="col-xs-12 col-sm-12 col-md-12 m-b-20">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tab1" data-toggle="tab">Pending Invoices</a></li>
                                <li><a href="#tab2" data-toggle="tab">Approved Invoices</a></li>
                                <li><a href="#tab4" data-toggle="tab">Offers</a></li>
                                <li><a href="#tab3" data-toggle="tab">Disbursed Invoices</a></li>
                            </ul>
                            <!-- Tab panels -->
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="tab1">
                                    <div class="panel-body">
                                        <div>
                                            <div class="panel panel-bd">
                                                <div class="panel-heading">
                                                    <div class="panel-title">
                                                        <h4>Pending Invoices</h4>
                                                    </div>
                                                </div>
                                                <div class="panel-body">
                                                    <div class="table-responsive">
                                                        <table  class="table table-striped">
                                                            <thead>
                                                                <tr>
                                                                    <th>#Invoice</th>
                                                                    <th>Invoice Date</th>
                                                                    <th>PO ID</th>
                                                                    <th>PO Date</th>
                                                                    <th>Buyer Name</th>
                                                                    <th style="text-align: right;">Total</th>
                                                                    <th style="width: 100px;">
                                                                        Action
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>    

                                                                <% if(supplierInvoices!=null) { %>

                                                                <% for (var i = 0; i < supplierInvoices.length; i++) { %>
                                                                    <% if(supplierInvoices[i].status=="in process" || supplierInvoices[i].status=="Quality Check") { %>
                                                                        <tr>
                                                                            <td>
                                                                                <a href="/supplier/view-invoice?poid=<%=supplierInvoices[i].invoiceId.slice(0,(supplierInvoices[i].invoiceId.length))%>"><%=supplierInvoices[i].invoiceId%></a>
                                                                            </td>
                                                                            <td>
                                                                                <%=supplierInvoices[i].date%> <%=supplierInvoices[i].time%>
                                                                            </td>
                                                                            <td>
                                                                                <a href="/supplier/view-po?poid=<%=supplierInvoices[i].purchaseOrders[0].orderId.slice(1,(supplierInvoices[i].purchaseOrders[0].orderId.length))%>"><%=supplierInvoices[i].purchaseOrders[0].orderId%></a>
                                                                                
                                                                            </td>
                                                                            <td>
                                                                                <%=supplierInvoices[i].purchaseOrders[0].date%>
                                                                            </td>
                                                                            <td>
                                                                                <%=buyers[i]%>
                                                                            </td>
                                                                            <td style="text-align: right;">
                                                                                <%=configData.currency%> <%=supplierInvoices[i].subtotal.toFixed(2)%> 
                                                                            </td>
                                                                            <td>
                                                                                <a href="/supplier/view-invoice?poid=<%=supplierInvoices[i].invoiceId.slice(0,(supplierInvoices[i].invoiceId.length))%>" class="btn btn-success w-md m-b-5 btn-sm">View Invoice</a>
                                                                            </td>
                                                                        </tr>
                                                                    <% } %>
                                                                <% } %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="7" align="center">
                                                                            There is no Pending Invoice.
                                                                        </td>
                                                                    </tr>
                                                                <% } %>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="tab-pane" id="tab2">
