<body class="hold-transition sidebar-mini">


        <!-- Site wrapper -->
        <div class="wrapper">
            <% include partials/supplier_header %>
            <!-- =============================================== -->
            <!-- Left side column. contains the sidebar -->
            <% include partials/supplier_left %>
            <!-- =============================================== -->
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="header-icon">
                        <i class="hvr-buzz-out fa fa-newspaper-o"></i>
                    </div>
                    <div class="header-title">
                        <h1>SofoSupply - Supplier PO</h1>
                        <small>You can manage PO.</small>
                        <ol class="breadcrumb">
                            <li><a href="/supplier"><i class="pe-7s-home"></i> Home</a></li>
                            <li class="active">Manage PO</li>
                        </ol>
                    </div>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">



                        <div class="col-xs-12 col-sm-12 col-md-12 m-b-20">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tab1" data-toggle="tab">Manage PO</a></li>
                            </ul>
                            <!-- Tab panels -->
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="tab1">
                                    <div class="panel-body">
                                        <div>
                                            <div class="panel panel-bd">
                                                <div class="panel-heading">
                                                    <div class="panel-title">
                                                        <h4>Manage PO</h4>
                                                    </div>
                                                </div>
                                                <div class="panel-body">
                                                    <div class="table-responsive">
                                                        <table  class="table table-striped">
                                                            <thead>
                                                                <tr>
                                                                    <th>#PO</th>
                                                                    <th>Order Date</th>
                                                                    <th>Buyer Name</th>
                                                                    <th style="text-align: right; width: 160px;">Total</th>
                                                                    <th style="width: 100px;">&nbsp;</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>    

                                                                <% if(supplierInfo.purchaseOrders!=null) { %>

                                                                <% for (var i = 0; i < supplierInfo.purchaseOrders.length; i++) { %>
                                                                    <tr>
                                                                        <td>
                                                                            <a href="/supplier/view-po?poid=<%=supplierInfo.purchaseOrders[i].orderId.slice(1,(supplierInfo.purchaseOrders[i].orderId.length))%>"><%=supplierInfo.purchaseOrders[i].orderId%></a>
                                                                            
                                                                        </td>
                                                                        <td>
                                                                            <%=supplierInfo.purchaseOrders[i].date%> <%=supplierInfo.purchaseOrders[i].time%>
                                                                        </td>
                                                                        <td>
                                                                            <%=buyers[i]%>
                                                                        </td>
                                                                        <td style="text-align: right;">
                                                                            <%=configData.currency%> <%=supplierInfo.purchaseOrders[i].totalValue.toFixed(2)%> 
                                                                        </td>
                                                                        <td>
                                                                            <%
                                                                                if(supplierInfo.purchaseOrders[i].status=="processing") {
                                                                            %>
                                                                                    <a href="/supplier/generate-invoice?poid=<%=supplierInfo.purchaseOrders[i].orderId.slice(1,(supplierInfo.purchaseOrders[i].orderId.length))%>" class="btn btn-violet w-md m-b-5 btn-sm">Upload Invoice</a>
                                                                            <%
                                                                                }
                                                                                else {
                                                                            %>
                                                                                    <%=supplierInfo.purchaseOrders[i].status%>
                                                                            <%
                                                                                }
                                                                            %>
                                                                        </td>
                                                                    </tr>
                                                                <% } %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="5">
                                                                            There is no PO
                                                                        </td>
                                                                    </tr>
                                                                <% } %>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>




                    </div> <!-- /.row -->
                </section> <!-- /.content -->
            </div> <!-- /.content-wrapper -->
            <footer class="main-footer">
                <div class="pull-right hidden-xs"> <b>Version</b> 1.0</div>
                <strong>Copyright &copy; 2017-2018 <a href="#">Sofocle</a>.</strong> All rights reserved.
            </footer>
        </div>
        <!-- ./wrapper -->
