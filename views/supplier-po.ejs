        <script>
            $(document).ready(function () {

                "use strict"; // Start of use strict

                // notification
                setTimeout(function () {
                    toastr.options = {
                        closeButton: true,
                        progressBar: true,
                        showMethod: 'slideDown',
                        timeOut: 4000
//                        positionClass: "toast-top-left"
                    };
                    toastr.success('Manage PO', 'Welcome to SofoSupply');

                }, 1300);


                $("#btnAddProduct").click(function() {
                    $("#tblProduct").append('<tr><td><input class="form-control" name="productName[]" id="txtProductName" placeholder="Enter Product Name" type="text"></td><td><input class="form-control" name="productQty[]" id="txtProductQty" type="number"></td><td><input class="form-control" name="productPrice[]" id="txtProductPrice" type="text"></td><td><input class="form-control" name="productTotal[]" id="txtProductTotal" type="text"></td><td><div><div class="icon_box" style="margin: 0px; min-height: auto;"><a href="Javascript:;"><i class="hvr-buzz-out fa fa-trash btnDeleteProduct"></i></a></div></div></td></tr>');
                });

                $("#tblProduct").on("click", ".btnDeleteProduct", function() {
                    $(this).parents("tr").remove();
                });



                $(".notifications-menu").click(function() {
                    $.get( "/removeNotifications", function( data ) {
                        $("#notiCount").remove();
                    });
                });

            });
        </script>


