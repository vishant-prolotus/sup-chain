<body class="hold-transition sidebar-mini">


        <!-- Site wrapper -->
        <div class="wrapper">
            <% include ../partials/admin_header %>
            <!-- =============================================== -->
            <!-- Left side column. contains the sidebar -->
            <% include ../partials/admin_left %>
            <!-- =============================================== -->
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="header-icon">
                        <i class="pe-7s-world"></i>
                    </div>
                    <div class="header-title">
                        <h1>SofoSupply - Manage Supplier</h1>
                        <small>You can add, edit and delete supplier</small>
                        <ol class="breadcrumb">
                            <li><a href="/admin"><i class="pe-7s-home"></i> Home</a></li>
                            <li class="active">Dashboard</li>
                        </ol>
                    </div>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        
                        
                        <div >
                            <div class="panel panel-bd">
                                <div class="panel-heading">
                                    <div class="panel-title">
                                        <h4>Suppliers</h4>
                                    </div>
                                </div>
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table id="dataTableExample2" class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                    <th>On Boarding Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for (var i=0; i<data.length; i++) { %>
                                                    <tr>
                                                        <td><%=data[i].userId%></td>
                                                        <td><%=data[i].name%></td>
                                                        <td><%=data[i].email%></td>
                                                        <td><% if (data[i].status=='active') {%>
                                                        
                                                                <a href="/admin/changeSupplierState?supplierId=<%=data[i].userId%>"><span class="label label-pill label-success m-r-15">Deactivate</span></a>
                                                            <%}else {%>
                                                            
                                                                <a href="/admin/changeSupplierState?supplierId=<%=data[i].userId%>"><span class="label label-pill label-danger m-r-15">Click to Activate</span></a>

                                                                
                                                            <%}%>
                                                            </td>
                                                        <td>
                                                            <a href="/admin/getSupplier?supplierId=<%=data[i].userId%>&tab=tab1"><button type="button" class="btn btn-success btn-circle m-b-5"><i class="glyphicon glyphicon-pencil"></i></button></a>
                                                            <a href="/admin/getSupplier?supplierId=<%=data[i].userId%>&tab=tab4" class="btn btn-primary btn-sm btnDisburseAmount">View Invoices</a>
                                                            
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>




                       





                        




                    </div> <!-- /.row -->
                </section> <!-- /.content -->
            </div> <!-- /.content-wrapper -->
            <% include ../partials/admin_footer %>
        </div>
        <!-- ./wrapper -->
