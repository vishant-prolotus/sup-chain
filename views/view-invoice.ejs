                                            <% } %>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                            <!-- settings -->
                            <li class="dropdown dropdown-user">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="pe-7s-settings"></i></a>
                                <ul class="dropdown-menu">
                                    <li><a href="profile.html"><i class="pe-7s-users"></i> User Profile</a></li>
                                    <li><a href="#"><i class="pe-7s-settings"></i> Settings</a></li>
                                    <li><a href="/admin/logout"><i class="pe-7s-key"></i> Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <!-- =============================================== -->
            <!-- Left side column. contains the sidebar -->
            <aside class="main-sidebar">
                <!-- sidebar -->
                <div class="sidebar">
                    <!-- Sidebar user panel -->
                    <div class="user-panel text-center">
                        <div class="image">
                            <img src="/assets/dist/img/user2-160x160.png" class="img-circle" alt="User Image">
                        </div>
                        <div class="info">
                            <p><%=accData.supplierName%></p>
                            <p><%=accData.employeeName%></p>
                        </div>
                    </div>
                    <!-- search form -->
                    <form action="#" method="get" class="sidebar-form">
                        <div class="input-group">
                            <input type="text" name="q" class="form-control" placeholder="Search...">
                            <span class="input-group-btn">
                                <button type="submit" name="search" id="search-btn" class="btn"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </form> <!-- /.search form -->
                    <!-- sidebar menu -->
                    <ul class="sidebar-menu">
                        <li class="header">MAIN NAVIGATION</li>
                        <li>
                            <% if (viewer=='buyer'){ %>
                            <a href="/buyer"><i class="ti-home"></i> <span>Dashboard</span>
                            <% }else if (viewer=='supplier') {%>
                            <a href="/supplier"><i class="ti-home"></i> <span>Dashboard</span>
                            <% } else if (viewer=='banker') {%>
                            <a href="/bank"><i class="ti-home"></i> <span>Dashboard</span>
                            <% } else if (viewer=='admin'){%>
                            <a href="/admin"><i class="ti-home"></i> <span>Dashboard</span>
                            <% } %>
                            </a>
                        </li>
                        <% if (viewer=='buyer'){ %>
                            <li><a href="/buyer/manage-po" id="btnAddBuyer"><i class="hvr-buzz-out fa fa-newspaper-o"></i><span>Manage PO</span></a></li>
                        <%}%>
                        <% if (viewer=='supplier'){ %>
                            <li><a href="/supplier/manage-po" id="btnAddBuyer"><i class="hvr-buzz-out fa fa-newspaper-o"></i><span>Manage PO</span></a></li>
                        <%}else if (viewer=='banker') {%>
                        <% } %>


                        <% if (viewer=='buyer'){ %>
                            <li class="active"><a href="/buyer/manage-invoice" id="btnAddSupplier"><i class="hvr-buzz-out fa fa-money"></i><span>Manage Invoices</span></a></li>
                        <%}%>
                        <% if (viewer=='supplier'){ %>
                            <li class="active"><a href="/supplier/manage-invoice" id="btnAddSupplier"><i class="hvr-buzz-out fa fa-money"></i><span>Manage Invoices</span></a></li>
                        <%} else if (viewer=='banker') {%>
                            <li class="active"><a href="/bank/manage-invoice" id="btnAddSupplier"><i class="hvr-buzz-out fa fa-money"></i><span>Manage Invoices</span></a></li>
                        <% }%>
                    </ul>
                </div> <!-- /.sidebar -->
            </aside>
            <!-- =============================================== -->
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="header-icon">
                        <i class="hvr-buzz-out fa fa-money"></i>
                    </div>
                    <div class="header-title">
                        <% if (viewer=='buyer'){ %>
                        <h1>SofoSupply - Buyer Invoice</h1>
                        <%}%>
                        <% if (viewer=='supplier'){ %>
                        <h1>SofoSupply - Supplier Invoice</h1>
                        <%}%>
                        <small>You can add, edit and delete Invoice.</small>
                        <ol class="breadcrumb">
                        <% if (viewer=='buyer'){ %>
                            <li><a href="/buyer"><i class="pe-7s-home"></i> Home</a></li>
                            <%}%>
                            <% if (viewer=='supplier'){ %>
                                <li><a href="/supplier"><i class="pe-7s-home"></i> Home</a></li>
                            <%} else if (viewer=='banker') {%>
                                <li><a href="/bank"><i class="pe-7s-home"></i> Home</a></li>
                                <% } %>
                            <li class="active">View Invoice</li>
                        </ol>
                    </div>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">

                      <div class="panel-body">
                                        <div>
                                            <div class="panel panel-bd">
                                                <div class="panel-heading">
                                                    <div class="panel-title">
                                                    <% if (viewer=='buyer'){ %>
                                                        <h4>Invoice from: <%=supplier%></h4>
                                                        <span><a href="/download-file?name=<%=invoice.invoiceId%>" target="_blank">View Invoice</a></span>
                                                        <%}else if(viewer=='supplier'||viewer=='banker'){%>
                                                        <h4>Invoice for: <%=buyer%></h4>
                                                        <span><a href="/download-file?name=<%=invoice.invoiceId%>" target="_blank">View Invoice</a></span>
                                                        <%}%>
                                                    </div>
                                                </div>
                                                <div class="panel-body">
                                                    <form action="/admin/manage-buyer" method="post">
                                                        <div id="inv01" class="row">
                                        <div class="col-sm-6">
                                            <address>
                                                <strong>
                                                <% if (viewer=='buyer'){ %>
                                                <%=buyer%>
                                                <%}else if(viewer=='supplier'||viewer=='banker'){%>
                                                <%=supplier%>
                                                <%}%>
                                                </strong><br>
                                                1355 Market Street, Suite 900<br>
                                                San Francisco, CA 94103<br>
                                                <abbr title="Phone">P:</abbr> (123) 456-7890
                                            </address>
                                        </div>
                                        <%
                                            tot = 0;
                                            for (var i=0;i<invoice.purchaseOrders[0].products.length;i++) {
                                                tot = tot + (invoice.purchaseOrders[0].products[i].quantity * invoice.purchaseOrders[0].products[i].rate);
                                            }
                                        %>
                                        <div class="col-sm-6 text-left" style="text-align: right;">
                                            <h4 class="m-t-0">Invoice: <%=invoice.invoiceId%></h4>
                                            <h4 class="m-t-0">Invoice: Value <%=configData.currency%> <%=tot.toFixed(2)%></h4>
                                            <div>Issued: <%=invoiceDate%></div>
                                            <div class="text-danger m-b-15">Payment Due: <%=creditDate%></div>
                                        </div>
                                    </div>
                                    <hr>
                                    <div id="inv02" class="table-responsive m-b-20">
                                        <!--<table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Item List</th>
                                                    <th style="text-align: right; width: 100px;">Quantity</th>
                                                    <th style="text-align: right; width: 300px;">Unit Price</th>
                                                    <th style="text-align: right; width: 300px;">Total Price</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for (var i=0;i<invoice.purchaseOrders[0].products.length;i++) { %>
                                                <tr>
                                                    <td><div><strong><%=invoice.purchaseOrders[0].products[i].productName%></strong></div>
                                                    <td align="right"><%=invoice.purchaseOrders[0].products[i].quantity%></td>
                                                    <td align="right"><%=configData.currency%><%=invoice.purchaseOrders[0].products[i].rate.toFixed(2)%></td>
                                                    <td align="right"><%=configData.currency%><%=invoice.purchaseOrders[0].products[i].value.toFixed(2)%></td>
                                                </tr>
                                                <% } %>
                                            </tbody>
                                            <tr>
                                                <td colspan="3" align="right"><div><strong>Total Amount</strong></div>
                                                <td align="right"><strong><%=configData.currency%><%=invoice.subtotal.toFixed(2)%></strong></td>
                                            </tr>
                                            <tr>
                                                <td colspan="3" align="right"><div><strong>Tax (<%=invoice.taxes%>%)</strong></div>
                                                <td align="right"><strong><%=configData.currency%><%= ((invoice.subtotal * invoice.taxes)/100).toFixed(2) %></strong></td>
                                            </tr>
                                            <tr>
                                                <td colspan="3" align="right"><div><strong>Grand Total</strong></div>
                                                <td align="right"><strong><%=configData.currency%><%=invoice.total.toFixed(2)%></strong></td>
                                            </tr>
                                        </table>-->
                                    </div>


                                                    </form>
                                                </div>


                                                <div id="inv03" class="panel-footer text-left">
                                                    <% if(invoice.status!="approved"&&viewer=='buyer'&&accData.type=='verifier') { %>
                                                        <a href="/buyer/approveInvoice?invoiceId=<%=invoice.invoiceId.slice(0,(invoice.invoiceId.length))%>&supplier=<%=invoice.supplier%>" class="btn btn-primary w-md m-b-5" style="float: left;">Approve</a>
                                                        <a href="/buyer/rejectInvoice?invoiceId=<%=invoice.invoiceId.slice(0,(invoice.invoiceId.length))%>" class="btn btn-danger w-md m-b-5" style="float: right;">Decline</a>
                                                    <% } %>
                                                    
                                                </div>



                                            </div>
                                        </div>
                                    </div>




                    </div> <!-- /.row -->
                </section> <!-- /.content -->
            </div> <!-- /.content-wrapper -->
            <footer class="main-footer">
                <div class="pull-right hidden-xs"> <b>Version</b> 1.0</div>
                <strong>Copyright &copy; 2017-2018 <a href="#">Sofocle</a>.</strong> All rights reserved.
            </footer>
        </div>
